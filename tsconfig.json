{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts", "src/**/*.d.ts", "__tests__/**/*.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES6",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {}
  }
}
