{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    ".eslintrc.js",
    "prettier.config.js",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "paths": {}
  }
}
